# Theme
theme = iTerm2 Default

# Font
font-size = 12
font-thicken = true

# Cursor
cursor-color = #fff

# Background
background-opacity = 0.9
background-blur = 5

# Window
window-padding-x = 10
window-padding-y = 10

# Tabs
macos-titlebar-style = tabs

# Scrollback
scrollback-limit = 10000

# Shell integration
shell-integration = zsh

# Keybinds
keybind = ctrl+a>-=new_split:down
keybind = ctrl+a>==new_split:right

keybind = ctrl+a>h=goto_split:left
keybind = ctrl+a>j=goto_split:bottom
keybind = ctrl+a>k=goto_split:top
keybind = ctrl+a>l=goto_split:right

keybind = ctrl+a>ctrl+h=resize_split:left,20
keybind = ctrl+a>ctrl+j=resize_split:down,20
keybind = ctrl+a>ctrl+k=resize_split:up,20
keybind = ctrl+a>ctrl+l=resize_split:right,20

keybind = ctrl+a>0=close_surface

keybind = ctrl+a>]=next_tab
keybind = ctrl+a>[=previous_tab
